<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:elevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_image_message_row_left"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_man" />

            <TextView
                android:id="@+id/tv_name_message_row_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/iv_image_message_row_left"
                android:text="@string/name"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_message_row_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_message_row_left"
                android:textSize="14dp"
                android:background="@color/WhiteSmoke"
                android:padding="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/iv_image_message_row_left"
                android:text="@string/status" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_image_message_row_right"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_man" />

            <TextView
                android:id="@+id/tv_name_message_row_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/iv_image_message_row_right"
                android:text="@string/name"
                android:textSize="10sp"
                android:visibility="invisible"
                android:textStyle="bold"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_message_row_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_message_row_right"
                android:textSize="14dp"
                android:background="@color/WhiteSmoke"
                android:padding="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                android:layout_toLeftOf="@id/iv_image_message_row_right"
                android:text="@string/status" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>